{
	"$schema": "http://json-schema.org/draft-03/schema#",
	"title": "Amy's faculty website data schema",
	"type": "object",
	"properties": {
		"sources": {
			"type": "object",
			"description": "Conference and journal sources.",
			"required": true,
			"additionalProperties": {
				"type": "object",
				"description": "Source names",
				"required": true,
				"properties": {
					"name": {
						"type": "string",
						"requried": true
					},
					"short": {
						"type": "string",
						"requried": true
					}
				}
			}
		},
	    "pubs": {
			"type": "array",
			"description": "List of publications.",
			"required": true,
			"items": {
				"type": "object",
				"description": "A publication.",
				"properties": {
					"id": {
						"type": "string",
						"required": true
					},
					"kind": {
						"type": "string",
						"required": true,
						"enum": ["refereed conference paper", "refereed workshop paper", "journal article", "refereed short conference paper", "juried conference paper", "book chapter", "refereed invited article", "non-refereed workshop paper", "technical report", "refereed magazine article", "whitepaper", "abstract"]
					},
					"authors": {
						"type": "array",
						"required": true,
						"items": {
							"type": "string"
						}
					},
					"deadname": {
						"type": "boolean",
						"required": true
					},
					"year": {
						"type": "integer",
						"required": true
					},
					"title": {
						"type": "string",
						"required": true
					},
					"source": {
						"type": "string",
						"required": true
					},
					"pages": {
						"type": ["string", "null"],
						"required": true
					},
					"doi": {
						"type": ["string", "null"],
						"required": false
					},
					"local": {
						"type": ["string", "null"],
						"required": true
					},
					"authorizer": {
						"type": ["string", "null"]
					},
					"publisher": {
						"type": "string",
						"required": true
					},
					"contribution": {
						"type": "string",
						"required": true
					}
				}
			}
	    },
	    "people": {
			"type": "array",
			"description": "List of people.",
			"required": true,
			"items": {
				"type": "object",
				"description": "A person.",
				"properties": {
					"id": {
						"type": "string",
						"required": true
					},
					"name": {
						"type": "string",
						"required": true
					},
					"active": {
						"type": "boolean",
						"required": true
					},
					"advised": {
						"type": "boolean",
						"required": true
					},
					"level": {
						"type": "string",
						"required": true,
						"enum": ["undergrad", "phd", "postdoc", "director"]
					},
					"dept": {
						"type": "string",
						"required": true
					},
					"coadvisor": {
						"type": ["string", "null"],
						"required": true
					},
					"bio": {
						"type": "string",
						"required": true
					},
					"url": {
						"type": "string",
						"required": true
					},
					"startdate": {
						"type": "integer",
						"required": true
					},
					"enddate": {
						"type": ["integer", "null"],
						"required": true
					},
					"achievements": {
						"type": "array",
						"required": true,
						"items": {
							"type": "string"							
						}
					}
				}
			}
	    },
	    "projects": {
			"type": "array",
			"description": "List of projects.",
			"required": true,
			"items": {
				"type": "object",
				"description": "A person.",
				"properties": {
					"id": {
						"type": "string",
						"required": true
					},
					"active": {
						"type": "boolean",
						"required": true
					},
					"name": {
						"type": "string",
						"required": true
					},
					"description": {
						"type": "string",
						"required": true
					},
					"funding": {
						"type": "array",
						"required": true,
						"items": {
							"type": "string"
						}
					},
					"people": {
						"type": "array",
						"required": true,
						"items": {
							"type": "string"
						}
					},
					"papers": {
						"type": "array",
						"required": true,
						"items": {
							"type": "string"
						}
					},
					"links": {
						"type": "array",
						"required": true,
						"items": {
							"type": "object",
							"required": true,
							"properties": {
								"title": {
									"type": "string",
									"required": true
								},
								"url": {
									"type": "string",
									"required": true
								}
							}
						}
					},
					"startdate": {
						"type": "integer",
						"required": true
					},
					"stopdate": {
						"type": ["integer", "null"],
						"required": true
					},
					"impact": {
						"type": "string",
						"required": true
					}
				}
			}
	    },
	    "posts": {
			"type": "array",
			"description": "List of posts.",
			"required": true,
			"items": {
				"type": "object",
				"description": "A blog post.",
				"required": true,
				"properties": {
					"url": {
						"type": "string",
						"required": true
					},
					"title": {
						"type": "string",
						"required": true
					},
					"date": {
						"type": "string",
						"required": true
					},
					"tags": {
						"type": "array",
						"required": true,
						"items": {
							"type": "string"
						}
					},
					"img": {
						"type": ["string", "null"],
						"required": true
					},
					"alt": {
					    "type": ["string", "null"],
					    "required": true
				    }
				}
			}
	    },
	    "impacts": {
			"type": "array",
			"description": "List of impacts.",
			"required": true,
			"items": {
		    	"type": "object",
				"description": "A population impacted.",
		    	"properties": {
			    	"id": {
				    	"type": "string",
				    	"required": true
			    	},
			    	"population": {
				    	"type": "string",
				    	"required": true
			    	},
			    	"alt": {
				    	"type": "string",
				    	"required": true
			    	},
			    	"description": {
				    	"type": "string",
				    	"required": true
			    	},
			    	"impacts": {
				    	"type": "array",
				    	"required": true,
				    	"items": {
					    	"type": "string"
				    	}
			    	}
		    	}
			}
	    },
	    "cv": {
			"type": "object",
			"description": "CV data structures.",
			"required": true
	    },
	    "travel": {
			"type": "array",
			"description": "List of trips.",
			"required": true,
			"items": {
				"type": "object",
				"required": true,
				"description": "A trip.",
				"properties": {
					"url": {
						"type": ["string", "null"],
						"required": true
					},
					"title": {
						"type": "string",
						"required": true
					},
					"details": {
						"type": "string",
						"required": true
					},
					"date": {
						"type": "string",
						"required": true
					},
					"report": {
						"type": ["string", "null"],
						"required": true
					}
				}
			}
	    },
	    "talks": {
			"type": "array",
			"description": "List of talks.",
			"required": true,
			"items": {
				"type": "object",
				"description": "A talk.",
				"properties": {
					"date": {
						"type": "string",
						"required": true
					},
					"image": {
						"type": "string",
						"required": true
					},
					"alt": {
						"type": "string",
						"required": true
					},
					"slides": {
						"type": "string",
						"required": true
					},
					"venue": {
						"type": "string",
						"required": true
					},
					"url": {
						"type": ["string", "null"],
						"required": true
					},
					"recording": {
						"type": ["string", "null"],
						"required": true
					},
					"practice": {
						"type": ["string", "null"],
						"required": true
					},
					"description": {
						"type": "string",
						"required": true
					},
					"keynote": {
						"type": "boolean",
						"required": true
					}
				}
			}
		},
		"classes": {
			"type": "array",
			"description": "List of classes.",
			"required": true,
			"items": {
				"type": "object",
				"description": "A class.",
				"properties": {
					"id": {
						"type": "string",
						"required": true
					},
					"alt": {
						"type": "string",
						"required": true
					},
					"link": {
						"type": "string",
						"required": true
					},
					"date": {
						"type": "string",
						"required": true
					},
					"title": {
						"type": "string",
						"required": true
					},
					"description": {
						"type": ["string", "null"],
						"required": true
					},
					"links": {
						"type": "array",
						"description": "List of posts.",
						"required": true,
						"items": {
							"type": "object",
							"required": true,
							"description": "A trip.",
							"properties": {
								"description": {
									"type": "string",
									"required": true
								},
								"link": {
									"type": "string",
									"required": true
								}
							}
						}
					}
				}
			}
		},
		"books": {
			"type": "array",
			"description": "List of books.",
			"required": true,
			"items": {
				"type": "object",
				"description": "A class.",
				"properties": {
					"image": {
						"type": "string",
						"required": true
					},
					"alt": {
						"type": "string",
						"required": true
					},
					"link": {
						"type": "string",
						"required": true
					},
					"title": {
						"type": "string",
						"required": true
					},
					"description": {
						"type": "string",
						"required": true
					},
					"editor": {
						"type": "boolean",
						"required": true
					}
				}
			}
		},
		"years": {
			"type": "object",
			"description": "Metadata about years."
		},
		"commitments": {
			"type": "array",
			"description": "A list of commitments",
			"required": true,
			"items": {
				"type": "array",
				"description": "Fields for a commitment",
				"requried": true,
				"items": [
					{
						"type": "string",
						"required": true
					},
					{
						"type": "string",
						"required": true
					},
					{
						"type": "string",
						"required": true,
						"enum": ["research", "service", "teaching", "personal"]
					},
					{
						"type": "string",
						"required": true,
						"enum": ["flexible", "required", "prime"]
					},
					{
						"type": "int",
						"required": true,
						"minimum": 1
					},
					{
						"type": "string",
						"required": true,
						"enum": ["weekly", "annually"]
					},
					{
						"type": ["int", "string"],
						"required": false
					},
					{
						"type": ["int", "string"],
						"required": false
					}
				]
			}
		}
	}
}