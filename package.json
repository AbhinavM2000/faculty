{
	"name": "UWFacultyPage",
	"version": "1.0.0",
	"description": "The webpage for University of Washington professor Amy J. Ko.",
	"license": "MIT License",
	"repository": "https://github.com/amyjko/faculty.git",
	"scripts": {
		"build": "browserify -t [ babelify --presets [ @babel/preset-env @babel/preset-react ] ] app.js | uglifyjs > build/app.js",
		"diff": "rsync --dry-run -avz --delete --include 'build' --exclude-from='.gitignore' --exclude '.git' . ~/public_html",
		"ship": "rsync -avz --delete --include 'build' --exclude-from='.gitignore' --exclude '.git' . ~/public_html",
		"lint": "jsonlint -q data/data.json --validate data/schema.json",
		"data": "set -e; npm run lint; npm run ship",
		"all": "set -e; npm run build; npm run lint; npm run ship",
		"deploy": "ssh -t ajko@ovid.u.washington.edu \"cd faculty && git pull && npm run all\"",
		"deploydata": "ssh -t ajko@ovid.u.washington.edu \"cd faculty && git pull && npm run data\""	
	},
	"devDependencies": {
		"browserify": "^16.2",
		"watchify": "^3.11",
		"babelify": "^10",
		"@babel/core": "^7",
		"@babel/cli": "^7",
		"@babel/preset-react": "^7",
		"@babel/preset-env": "^7",
		"uglify-js": "^3.4.7",
		"jsonlint": "^1.6"
	},
	"dependencies": {
		"bootstrap": "^3.3.7",
		"history": "^4.7.2",
		"jquery": "^3.0.0",
		"lodash": "^4.17.10",
		"npm": "^6.13.4",
		"react": "^16.13",
		"react-dom": "^16.13",
		"react-router-dom": "^5.0"
	}
}
